@model ContentCreateModel

<div class="container mb-5">
  <div class="row">
    <div class="col-10">
      <div class="card">

        <div class="card-header">
          <h4 class="p-2">Eğitim İçeriği Hazırlama Formu</h4>
        </div>

        <div class="card-body p-3">
          <form action="/Admin/CreateContent" method="POST" enctype="multipart/form-data">
            <div class="row">
              <div class="col-7">

              <label for="header" class=" h5 form-label me-3">Ders Başlığı</label>
              <input type="text" name="LessonTitle" id="header" class="form-control mt-3 me-5">

              </div>
            </div>
            <div class="row mb-4">
              <div class="col-8">

                <label for="editor" class="h5 form-label me-5">Eğitim İçeriği</label>
                <textarea name="LessonContent" id="editor"></textarea>



              </div>

              <div class="col-3 ms-5">
                <div class="card p-2">
                  <div class="card-body">
                    <h5 class="mb-3">Ders Seviyesi</h4>
                     
                      <div>
                        <input type="radio" name="levelId" id="level2" class="form-check-input" value="2">
                        <label for="level2" class="form-label me-2">A1 Seviyesi</label>
                      </div>

                      <div>
                        <input type="radio" name="levelId" id="level3" class="form-check-input " value="3">
                        <label for="level3" class="form-label me-2">A2 Seviyesi</label>
                      </div>
                      <div>
                        <input type="radio" name="levelId" id="level4" class="form-check-input " value="4">
                        <label for="level4" class="form-label me-2">B1 Seviyesi</label>
                      </div>
                      <div>
                        <input type="radio" name="levelId" id="level5" class="form-check-input " value="5">
                        <label for="level5" class="form-label me-2">B2 Seviyesi</label>
                      </div>
                      <div>
                        <input type="radio" name="levelId" id="level6" class="form-check-input " value="6">
                        <label for="level6" class="form-label me-2">C1 Seviyesi</label>
                      </div>
                      <div>
                        <input type="radio" name="levelId" id="level7" class="form-check-input " value="7">
                        <label for="level7" class="form-label me-2">C2 Seviyesi</label>
                      </div>

                  </div>
                </div>
              </div>
              <div class="mt-4 me-0">
                <button type="submit" class="btn btn-primary ms-1">İçeriği Kaydet</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>




</div>



<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

<script>
  CKEDITOR.replace('editor');
</script>

<script>
  CKFinder.widget('editor', {
    readOnly: true,
    width: '100%',
    height: 500
  });</script>
