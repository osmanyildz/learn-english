@model ResetPasswordModel
<div class="container mt-5">



<div class="row">
    <div class="col-md-6">
<h1 class="h3">Parolayı Yenile</h1>
<hr>
        <form asp-controller="Account" asp-action="ResetPassword" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>      
        <input type="hidden" asp-for="Token">
         <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Email" readonly>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>   
         <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>       
        

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary ">Kaydet</button>
            </div>
        </div>
    </form>
    </div>
</div>
</div>